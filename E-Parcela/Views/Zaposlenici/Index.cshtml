@model IEnumerable<Zaposlenici>

@{
    ViewData["Title"] = "Lista Zaposlenika";
}

<div class="row">
    <div class="col-md-8 offset-md-2">

        <table style="background-color: #b3d1ff; border-block-color:black;"class="table">
            <thead>
                <tr class="text-center">
                    <th style="background-color:#66a3ff; color:white">@Html.DisplayNameFor(model => model.ProfilePictureURL)</th>
                    <th style="background-color:#66a3ff; color:white">@Html.DisplayNameFor(model => model.FullName)</th>
                    <th style="background-color:#66a3ff; color:white">@Html.DisplayNameFor(model => model.Bio)</th>
                    <th style="background-color:#66a3ff; color:white">Akcije</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@item.ProfilePictureURL" alt="@item.FullName" style="max-width: 150px" />
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.FullName)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Bio)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i>Uredi </a> |
                            <a style="color:white"class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"></i>Detalji</a> |
                            <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i>Obrisati </a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>

@await Html.PartialAsync("_CreateItem", "Zaposlenici")

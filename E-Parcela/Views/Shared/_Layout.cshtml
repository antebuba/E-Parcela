<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - E_Parcela</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/E_Parcela.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
</head>
<body style="background-color:#d1e0e0">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">

                <div style="background-color: whitesmoke; border-radius: 10px; font-size: large;" class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav d-flex justify-content-between w-100">
                        <li class="navbar-nav">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Početna</a>
                        </li>
                        <li class="navbar-nav">
                            <a class="nav-link text-dark" asp-controller="Parcele" asp-action="Index">Parcele</a>
                        </li>
                        <li class="navbar-nav">
                            <a class="nav-link text-dark" asp-controller="Suradnici" asp-action="Index">Suradnici</a>
                        </li>
                        <li class="navbar-nav">
                            <a class="nav-link text-dark" asp-controller="Sadnice" asp-action="Index">Sadnice</a>
                        </li>
                        <li class="navbar-nav">
                            <a class="nav-link text-dark" asp-controller="Zaposlenici" asp-action="Index">Zaposlenici</a>
                        </li>
                    </ul>
                </div>

            </div>
        </nav>
    </header>

    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - E_Parcela 
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

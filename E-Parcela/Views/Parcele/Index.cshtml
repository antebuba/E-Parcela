@model IEnumerable<Parcele>

@{
    ViewData["Title"] = "Lista parcela";
}

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 col-xs-6 border-primary mb-3">
            <div class="card mb-3" style="max-width: 540px;">
                <div class="row g-0">
                    <div class="col-md-12">
                        <div class="card-header text-white" style="background-color: red;">
                            <p class="card-text">
                                <h5 class="card-title">
                                    @item.Name

                                    <a class="text-white float-right" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i></a>

                                </h5>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <img src="@item.ImageURL"  height ="100%" width="100%" alt="@item.Name">
                    </div>
                    <div class="col-md-6">
                        <div class="card-body" style="background-color:white">
                            <p class="card-text">@item.Description</p>
                            <p class="card-text"><b>Kategorija: </b>@item.ParcelaCategory</p>
                            <p class="card-text"><b>Početni datum: </b>@item.StartDate</p>
                            <p class="card-text"><b>Krajnji datum: </b>@item.EndDate</p>
                            

                        </div>
                    </div>
                    <div class="col-md-12" style="background-color: blue;">
                        <div class="card-footer" style="background-color:blue">
                            <p class="card-text">
                                <a class="btn btn-outline-primary float-right" asp-action="Details" asp-route-id="@item.Id">
                                    <i class="bi bi-eye-fill"></i> Detalji
                                </a>
                                
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
@await Html.PartialAsync("_CreateItem", "Parcele")

